<?xml version="1.0"?>

<launch>
    <!-- run pointcloud_to_laserscan node -->
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan_1">

        <remap from="cloud_in" to="/front_livox_lidar"/>
        <remap from="scan" to="/scan_front"/>
        <rosparam>
            target_frame: base_footprint # Leave disabled to output scan in pointcloud frame
            transform_tolerance: 0.02
            min_height:   0.3
            max_height:   1.5 

            angle_min: -3.14 # -M_PI/2
            angle_max: 3.14 # M_PI/2
            angle_increment: 0.0087 # M_PI/360.0
            scan_time: 0.3333
            range_min: 1.5
            range_max: 100.0
            use_inf: true

            # Concurrency level, affects number of pointclouds queued for processing and number of threads used
            # 0 : Detect number of cores
            # 1 : Single threaded
            # 2->inf : Parallelism level
            concurrency_level: 1
        </rosparam>

    </node>

        <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan_2">

        <remap from="cloud_in" to="/back_livox_lidar"/>
        <remap from="scan" to="/scan_back"/>
        <rosparam>
            target_frame: base_footprint # Leave disabled to output scan in pointcloud frame
            transform_tolerance: 0.02
            min_height: 0.3
            max_height: 1.5

            angle_min: -3.14 # -M_PI/2
            angle_max: 3.14 # M_PI/2
            angle_increment: 0.0087 # M_PI/360.0
            scan_time: 0.3333
            range_min:   1.5
            range_max: 100.0
            use_inf: true

            # Concurrency level, affects number of pointclouds queued for processing and number of threads used
            # 0 : Detect number of cores
            # 1 : Single threaded
            # 2->inf : Parallelism level
            concurrency_level: 1
        </rosparam>

    </node>
</launch>
