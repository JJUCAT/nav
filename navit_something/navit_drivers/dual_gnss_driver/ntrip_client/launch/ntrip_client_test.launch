<?xml version="1.1"?>
<launch>
    <env name="NTRIP_CLIENT_DEBUG" value="true"/>
  <!-- ****************************************************************** -->
  <!-- NTRIP Client Node -->
  <!-- ****************************************************************** -->
  <node name="ntrip_client_node" pkg="ntrip_client" type="ntrip_ros.py" output="screen" ns="ntrip_client">
      <rosparam command="load" file="$(find ntrip_client)/config/j110_witmotion.yaml" />
      <param name="without_rtk" value="true" />
  </node>

  <!-- publish a GPGGA message to the ntrip_client_node -->
   <node pkg="rostopic" type="rostopic" name="fake_gpgga" args="pub  /ntrip_client/nmea nmea_msgs/Sentence -r2 --file=$(find ntrip_client)/launch/fake_gpgga.msg" />
</launch>
